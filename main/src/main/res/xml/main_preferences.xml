<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_gif_settings">

        <Preference
            android:key="@string/key_gif_play_control"
            android:title="@string/title_gif_play_control"/>

        <SwitchPreferenceCompat
            android:key="@string/key_alert_for_big_gif"
            android:defaultValue="true"
            android:summary="@string/summary_alert_when_play_big_gif_using_roaming"
            android:title="@string/title_alert_when_play_big_gif_using_roaming"/>

        <SwitchPreferenceCompat
            android:key="@string/key_auto_refresh"
            android:defaultValue="true"
            android:summary="@string/summary_refresh_feeds_when_app_started"
            android:title="@string/title_refresh_feeds_when_app_started"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_general">

        <SwitchPreferenceCompat
            android:key="@string/key_check_update"
            android:defaultValue="true"
            android:summary="@string/summary_check_update"
            android:title="@string/title_check_update"/>

        <Preference
            android:key="@string/key_clean_cache"
            android:summary="@string/summary_clean_cache"
            android:title="@string/title_clean_cache"/>

        <Preference
            android:key="@string/key_about"
            android:title="@string/title_about"/>

        <Preference
            android:key="@string/key_user_terms"
            android:title="@string/title_user_terms"/>

        <Preference
            android:key="@string/key_app_info"
            android:title="@string/title_app_info"/>

        <Preference
            android:key="@string/key_logout"
            android:title="@string/title_logout"/>


    </PreferenceCategory>


</PreferenceScreen>